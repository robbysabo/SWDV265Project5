<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project5.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo.png"
                HeightRequest="200"
                Aspect="AspectFit"
                SemanticProperties.Description="logo" />

            <Label
                Text="Home of our world famous spaghetti"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Check out our menu and find your way here"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Menu and Directions" />

            <Button
                x:Name="MenuBtn"
                Text="Menu"
                Clicked="OnMenuClicked"
                />
            <Button
                x:Name="DirectionBtn"
                Text="Directions"
                Clicked="OnDirectionClicked"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
