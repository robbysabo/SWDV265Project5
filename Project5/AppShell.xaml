<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project5.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project5"
    Shell.FlyoutBehavior="Flyout"
    Title="Project5">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:MenuPage}"
        Route="MenuPage" />
    
    <ShellContent
        Title="Direction"
        ContentTemplate="{DataTemplate local:DirectionPage}"
        Route="DirectionPage" />

</Shell>
